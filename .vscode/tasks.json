// ########################################################## //
//                                                            //
//    Este arquivo contém as tasks responsáveis por iniciar   //
//                   e encerrar o OpenOCD.                    //
//                                                            //
//     Não altere-o a menos que saiba o que está fazendo!     //
//                                                            //
// ########################################################## //

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch OpenOCD",
      "type": "shell",
      "command": "openocd -f C:/ti/OpenOCD-20230202-0.12.0/share/openocd/scripts/target/cc2538.cfg",
      "isBackground": true,
      "dependsOn": "CMake build",
      "problemMatcher": {
        "pattern": {
          "regexp": "(Info|Warn) : .*",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Open On-Chip Debugger.*",
          "endsPattern": "Info : Listening on port [0-9]{1,5} for gdb connections"
        }
      }
    },
    {
      "label": "CMake build",
      "type": "cmake",
      "command": "build",
      "targets": ["flash"],
      "problemMatcher": {
        "pattern": {
          "regexp": "build finished with error(s).*",
          "file": 1,
          "location": 2,
          "message": 3
        }
      }
    },
    {
      "label": "Kill All",
      "type": "shell",
      "command": "echo ${input:terminate}"
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ],
}